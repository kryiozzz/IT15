<!-- Admin Modals Container -->
<div id="modalsContainer">
    <!-- User Modal -->
    <div class="modal-overlay" id="userModal">
        <div class="modal" style="width: 800px;">
            <div class="modal-header">
                <h2 class="modal-title">Users Management</h2>
                <button class="modal-close" onclick="closeModal('userModal')">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Add User Form -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-4">Add New User</h3>
                    <form id="addUserForm">
                        <div class="form-group">
                            <label class="form-label">Username</label>
                            <input type="text" name="username" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" name="email" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Role</label>
                            <select name="role" class="form-select" required>
                                <option value="">Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Worker">Worker</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password</label>
                            <input type="password" name="password" class="form-input" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Create User</button>
                    </form>
                </div>

                <!-- Users Table -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Existing Users</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full" id="usersTable">
                            <thead>
                                <tr class="bg-gray-100">
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Username</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Machines Modal -->
    <div class="modal-overlay" id="machineModal">
        <div class="modal" style="width: 1000px;">
            <div class="modal-header">
                <h2 class="modal-title">Machines Management</h2>
                <button class="modal-close" onclick="closeModal('machineModal')">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Machines Table -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Machine Status</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full" id="machinesTable">
                            <thead>
                                <tr class="bg-gray-100">
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Last Maintenance</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="machinesTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Modal -->
    <div class="modal-overlay" id="productModal">
        <div class="modal" style="width: 1000px;">
            <div class="modal-header">
                <h2 class="modal-title">Products Management</h2>
                <button class="modal-close" onclick="closeModal('productModal')">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Products Table -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Products</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full" id="productsTable">
                            <thead>
                                <tr class="bg-gray-100">
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Price</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Stock</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="productsTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Production Orders Modal -->
    <div class="modal-overlay" id="productionOrderModal">
        <div class="modal" style="width: 1200px;">
            <div class="modal-header">
                <h2 class="modal-title">Production Orders</h2>
                <button class="modal-close" onclick="closeModal('productionOrderModal')">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Production Orders Table -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Production Orders</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full" id="productionOrdersTable">
                            <thead>
                                <tr class="bg-gray-100">
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Quantity</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Price</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Order Date</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="productionOrdersTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Orders Modal -->
    <div class="modal-overlay" id="customerOrderModal">
        <div class="modal" style="width: 1200px;">
            <div class="modal-header">
                <h2 class="modal-title">Customer Orders</h2>
                <button class="modal-close" onclick="closeModal('customerOrderModal')">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Customer Orders Table -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Customer Orders</h3>
                    <div class="overflow-x-auto">
                        <table class="w-full" id="customerOrdersTable">
                            <thead>
                                <tr class="bg-gray-100">
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Customer</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Quantity</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total Amount</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Order Date</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="customerOrdersTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Machine Modal -->
    <div class="modal-overlay" id="editMachineModal">
        <div class="modal" style="width: 600px;">
            <div class="modal-header">
                <h2 class="modal-title">Edit Machine Status</h2>
                <button class="modal-close" onclick="closeModal('editMachineModal')">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editMachineForm">
                    <input type="hidden" name="machineId" id="editMachineId">
                    <div class="form-group">
                        <label class="form-label">Machine Name</label>
                        <input type="text" name="machineName" id="editMachineName" class="form-input" readonly>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <select name="status" id="editMachineStatus" class="form-select" required>
                            <option value="Operational">Operational</option>
                            <option value="Under Maintenance">Under Maintenance</option>
                            <option value="Offline">Offline</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Maintenance Date</label>
                        <input type="date" name="lastMaintenanceDate" id="editMachineMaintenanceDate" class="form-input" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline" onclick="closeModal('editMachineModal')">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>